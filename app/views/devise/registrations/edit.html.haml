.container
  .col-md-12
    %h1 Update My Account
.container
  .col-md-12
    .panel.panel-primary.user-form
      .panel-heading
        %h2.panel-title Edit My Details
      .panel-body
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
          = devise_error_messages!
          .row
            %form{role: "form"}
              .col-md-4
                .form-group
                  = f.label :first_name, class: "required"
                  = f.text_field :first_name, placeholder: "First Name", class: "form-control"
                .form-group
                  = f.label :last_name, class: "required"
                  = f.text_field :last_name, placeholder: "Last Name", class: "form-control"
                .form-group
                  = f.label :username, class: "required"
                  = f.text_field :username, placeholder: "Username", class: "form-control", :autofocus => true
                .form-group
                  = f.label :email, class: "required"
                  = f.email_field :email, placeholder: "Email Address", class: "form-control"
                .form-group
                  = f.label :password, class: "password-hint"
                  = f.password_field :password, placeholder: "Password", class: "form-control"
                .form-group
                  = f.label :password_confirmation, class: "required"
                  = f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control"
                .form-group
                  = f.label :avatar, "Upload a photo", class: "required"
                  = f.file_field :avatar
                .form-group
                  = f.label :favourite_location, class: "clear-emphasis"
                  = select(:user, :favourite_location, (%w(Chelsea Fulham Hammersmith Mayfair Camden Islington Angel OldStreet Shoreditch Hoxton BrickLane Blackfriars Farringdon Dalston Barnes)))
                .form-group
                  = f.label :about_me, "About me:", class: "clear-emphasis"
                  = f.text_area :about_me, placeholder: "Tell us a bit about yourself...", class: "form-control", rows: 4
                .form-group
                  = f.label :current_password, class: "required hint"
                  = f.password_field :current_password, placeholder: "Current Password", class: "form-control"

              .form-group
                = f.submit "Update My Profile", class: "btn btn-default form-control"
    %h3 Cancel my account

    %p
      Unhappy? #{button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}

    = link_to "Back", :back
